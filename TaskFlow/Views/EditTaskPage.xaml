<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskFlow.Views.EditTaskPage"
             Title="EditTaskPage">

    <ScrollView>
        <StackLayout Padding="30" Spacing="10">
            <Label Text="Edit Task" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="Center" />

            <Entry x:Name="TitleEntry" Placeholder="Task Title" />
            <Editor x:Name="DescriptionEditor" Placeholder="Task Description" HeightRequest="100" />

            <Button Text="Save" Clicked="OnSaveClicked" />
            <Button Text="Cancel" Clicked="OnCancelClicked" />
        </StackLayout>
    </ScrollView>
    
</ContentPage>